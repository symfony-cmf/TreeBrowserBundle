<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service 
            id="cmf_tree_browser.form.type.phpcr_odm.tree_model" 
            class="Symfony\Cmf\Bundle\TreeBrowser\Form\Type\TreeModelType"
            >

            <!-- @todo: change this to a manager registry injection -->
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager"/>
            <argument type="service" id="cmf_tree_browser.doctrine_phpcr.phpcrodm_tree" />

            <tag name="form.type" alias="cmf_tree_phpcr_odm" />

        </service>

        <service 
            id="cmf_tree_browser.doctrine_phpcr.form.type.tree_manager" 
            class="Symfony\Cmf\Bundle\TreeBrowser\Form\Type\TreeManagerType"
            >

            <tag name="form.type" alias="cmf_tree_phpcr_odm_manager" />
        </service>

    </services>

</container>

