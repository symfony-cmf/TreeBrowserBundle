<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="symfony_cmf_phpcr_browser_frontend" pattern="/">
        <default key="_controller">symfony_cmf_phpcr_browser.frontend_controller:indexAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="symfony_cmf_phpcr_browser_node_form" pattern="/_node_form">
        <default key="_controller">symfony_cmf_phpcr_browser.frontend_controller:nodeFormAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="symfony_cmf_phpcr_browser_node_form_submit" pattern="/_form">
        <default key="_controller">symfony_cmf_phpcr_browser.frontend_controller:submitAction</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
